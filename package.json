{
  "name": "bramagrams",
  "version": "1.0.0",
  "repository": "https://github.com/nkosarek/bramagrams",
  "author": "nkosarek",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/node": "^14.0.23",
    "@types/socket.io": "^2.1.8",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "postinstall": "cd client && yarn install",
    "build": "yarn build-client && tsc",
    "start": "NODE_ENV=production node ./dist/server",
    "build-client": "cd client && yarn build && cd ..",
    "dev": "NODE_ENV=development nodemon --watch 'server/**/*.ts' --exec 'ts-node' server/server.ts"
  }
}
